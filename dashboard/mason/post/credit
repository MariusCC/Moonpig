%# vim:set ft=mason:
<%args>
$amount
$reason
$ledger_guid
</%args>
<%perl>
my $credit = $m->mp_request(
  POST => sprintf(
    '/ledger/guid/%s/credits',
    $ledger_guid,
  ),
  {
    type   => 'Courtesy',
    attributes => {
      amount => int($amount * 100_000),  # convert to millicents
      reason => $reason,
    },
  },
);
$m->redirect('/ledger/' . $ledger_guid);
</%perl>
