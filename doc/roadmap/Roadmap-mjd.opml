<?xml version="1.0" encoding="utf-8"?>
<opml version="1.0">
  <head>
    <title>Roadmap-mjd</title>
    <expansionState>0</expansionState>
  </head>
  <body>
    <outline text="Moonpig Project" estimate="6w 4d 6.5h">
      <outline text="migration planning">
        <outline text="by features?"/>
        <outline text="or do accounts wholesale as it becomes possible?"/>
      </outline>
      <outline text="user stories" estimate="3w 2d">
        <outline text="simplified" estimate="3w 2h">
          <outline text="calendar-based billing" estimate="4d">
            <outline text="banks" estimate="1d">
              <outline text="basics" estimate="2h"/>
              <outline text="current-balance" estimate="4h"/>
              <outline text="holds" estimate="2h"/>
            </outline>
            <outline text="consumers" estimate="1d 4h">
              <outline text="basics" estimate="4h"/>
              <outline text="money remaining" estimate="4h"/>
              <outline text="units remaining" estimate="4h"/>
            </outline>
            <outline text="ledgers" estimate="2h"/>
            <outline text="transfers" estimate="2h"/>
            <outline text="invoices" estimate="4h"/>
            <outline text="cost trees and charges" estimate="4h"/>
          </outline>
          <outline text="usage-based billing" estimate="1h"/>
          <outline text="event system">
            <outline text="heartbeat event"/>
            <outline text="where do we store &quot;last did charging at X time?&quot;"/>
            <outline text="register pre-commit callbacks"/>
            <outline text="register post-completion callbacks"/>
            <outline text="register within-transaction callbacks"/>
          </outline>
          <outline text="replacement setup" estimate="2h">
            <outline text="identical service" estimate="1h"/>
            <outline text="n-long chain (for brackets of rates)" estimate="1h">
              <outline text="and someone who signs up for 7 years and gets the 6th free" estimate="1h"/>
            </outline>
          </outline>
          <outline text="expiration of service" estimate="1d 4h">
            <outline text="...when replacement exists" estimate="2h"/>
            <outline text="...when replacement doesn't exist" estimate="4h"/>
            <outline text="deactivate service on preprogrammed future date" estimate="2h"/>
            <outline text="manual deactivation by CS" estimate="4h"/>
          </outline>
          <outline text="contact management" estimate="1d 4h">
            <outline text="contacts (per se)" estimate="4h"/>
            <outline text="contact updates, editing, etc." estimate="1d"/>
          </outline>
          <outline text="send invoice" estimate="4h">
            <outline text="by email" estimate="2h"/>
            <outline text="by post" estimate="2h"/>
          </outline>
          <outline text="pay invoice" estimate="4h"/>
          <outline text="partial payment?" estimate="4h"/>
          <outline text="overpayment" estimate="2h"/>
          <outline text="upgrade/downgrade" estimate="5h">
            <outline text="Tricky Lizzie who cancels her extra aliases  every 29th" estimate="3h"/>
            <outline text="with free trial period" estimate="2h">
              <outline text=" with subsequent autodowngrade after free trial" estimate="1h"/>
              <outline text="partial free trial after partial free trial / refuse second free trial" estimate="1h"/>
            </outline>
          </outline>
          <outline text="merging accounts" estimate="1d">
            <outline text="create new account and attach to existing bank" estimate="2h"/>
            <outline text="merge two accounts with existing banks" estimate="2h"/>
            <outline text="splitting accounts" estimate="4h">
              <outline text="where there was only one account before" estimate="2h"/>
              <outline text="where there were multiple joined accounts that must be separated" estimate="2h"/>
            </outline>
          </outline>
          <outline text="per-seat accounts" estimate="1d"/>
          <outline text="per-calendar consumer switches to per-usage" estimate="4h"/>
          <outline text="consumption of general funds" estimate="4h"/>
          <outline text="refunds (and non-refundables)" estimate="2h">
            <outline text="in general"/>
            <outline text="and when there was a volume discount" estimate="2h"/>
          </outline>
          <outline text="discounts and coupons" estimate="1d"/>
          <outline text="fixed monthly cost plus usage charge" estimate="2h"/>
          <outline text="10% off monthly charges (non-profit discount)" estimate="1d"/>
        </outline>
        <outline text="specific" estimate="1d 6h">
          <outline text="standard pobox account" estimate="4h">
            <outline text="extra aliases, etc" estimate="4h"/>
            <outline text="AllMail"/>
          </outline>
          <outline text="domain registration" estimate="2h"/>
          <outline text="listbox per-list billing" estimate="2h"/>
          <outline text="listbox bulk billing" estimate="2h"/>
          <outline text="metered pobox accounts (Convio)" estimate="4h"/>
        </outline>
      </outline>
      <outline text="customer service tools" estimate="1d 1.5h">
        <outline text="overview of ledger" estimate="1d 1.5h">
          <outline text="active consumers" estimate="1h"/>
          <outline text="general funds" estimate="0.5h"/>
          <outline text="invoice history" estimate="4h"/>
          <outline text="invoice drill-down" estimate="3h">
            <outline text="sensible cost tree browser" estimate="3h"/>
          </outline>
          <outline text="contact information" estimate="1h"/>
        </outline>
      </outline>
      <outline text="application integration API" estimate="2d 6h">
        <outline text="portable invoice representation"/>
        <outline text="get invoice details" estimate="2h"/>
        <outline text="get current balance" estimate="4h"/>
        <outline text="mechanism for communication of options (now I have extra aliases)" estimate="1d"/>
        <outline text="how many units of consumption remain?" estimate="4h">
          <outline text="sometimes, in days; sometimes in deliveries; etc" estimate="4h"/>
        </outline>
        <outline text="place hold for X units" estimate="2h"/>
        <outline text="place charge for X units" estimate="2h"/>
        <outline text="update contact information"/>
      </outline>
      <outline text="credits and coupons" estimate="1d">
        <outline text="refundable or non-refundable credit" estimate="2h"/>
        <outline text="non-discountable charges" estimate="2h"/>
        <outline text="discount distribution across subtrees" estimate="4h"/>
      </outline>
      <outline text="application integration" estimate="1w 1h">
        <outline text="generic command-line browser" estimate="6h"/>
        <outline text="pobox" estimate="3d">
          <outline text="signup" estimate="1d 6h">
            <outline text="create ledger" estimate="1d"/>
            <outline text="create consumer (with trial period)" estimate="2h"/>
            <outline text="send first bill" estimate="4h"/>
          </outline>
          <outline text="add new account" estimate="2h"/>
          <outline text="cancel account" estimate="2h"/>
          <outline text="domain registration" estimate="6h">
            <outline text="queued event for registration" estimate="2h"/>
            <outline text="monitor for domain registration" estimate="4h"/>
          </outline>
        </outline>
        <outline text="listbox" estimate="1d 3h">
          <outline text="signup" estimate="5h">
            <outline text="create ledger" estimate="2h"/>
            <outline text="create consumer" estimate="2h"/>
            <outline text="send first bill" estimate="1h"/>
          </outline>
          <outline text="add new lists" estimate="1h"/>
          <outline text="deactivate lists" estimate="1h"/>
          <outline text="cash authorization for posting" estimate="4h">
            <outline text="success behavior" estimate="2h"/>
            <outline text="failure behavior" estimate="2h"/>
          </outline>
        </outline>
      </outline>
      <outline text="internal competence with KiokuDB (or something)" estimate="4d"/>
      <outline text="persistence to database">
        <outline text="kioku objects"/>
        <outline text="non-kioku objects (?)"/>
      </outline>
      <outline text="asynchronous event system" estimate="1d 6h">
        <outline text="mechanism for building up URL and request from event attributes" estimate="1d"/>
        <outline text="means to clear or replace registered events" estimate="6h"/>
      </outline>
      <outline text="integration with external payment/etc. system" estimate="1d"/>
      <outline text="migration to moonpig" estimate="1d">
        <outline text="modifications to old billing systems" estimate="1d">
          <outline text="which old applications will survive?"/>
          <outline text="reimplementation of old billing APIs" estimate="4h">
            <outline text="account expiration date method" estimate="4h"/>
            <outline text="contact management"/>
            <outline text="invoice receptors"/>
          </outline>
          <outline text="mark new customers as off-limits to old system" estimate="4h">
            <outline text="process-chilltills" estimate="4h"/>
            <outline text="what else?"/>
          </outline>
        </outline>
        <outline text="pobox">
          <outline text="tool to migrate one client"/>
          <outline text="upgrade alerts about billing problems"/>
          <outline text="upgrade purgers to check correct paid-up status"/>
        </outline>
        <outline text="listbox">
          <outline text="tool to migrate one freeside account"/>
          <outline text="upgrade alerts about billing problems"/>
          <outline text="upgrade purgers to check correct paid-up status"/>
          <outline text="upgrade the tiered cost updater script"/>
        </outline>
      </outline>
    </outline>
  </body>
</opml>
