<?xml version="1.0" encoding="utf-8"?>
<opml version="1.0">
  <head>
    <title>Roadmap-rjbs</title>
    <expansionState>0,1,4,5,6,13,15,21,25,30,37,39,42,45,51,56,57,64,65,69,72,77,82,86,88,89,95,98,99,105,109,112,116,117,119,123,126,130</expansionState>
  </head>
  <body>
    <outline text="Moonpig Project" estimate="10w 4d 2h">
      <outline text="migration planning">
        <outline text="by features?"/>
        <outline text="or do accounts wholesale as it becomes possible?"/>
      </outline>
      <outline text="user stories" estimate="5w 1h">
        <outline text="simplified" estimate="4w 2d 7h">
          <outline text="calendar-based billing" estimate="1w 1d 6h">
            <outline text="banks" estimate="1d"/>
            <outline text="consumers" estimate="1d"/>
            <outline text="ledgers" estimate="2h"/>
            <outline text="transfers" estimate="4h"/>
            <outline text="invoices" estimate="2d"/>
            <outline text="cost trees and charges" estimate="2d"/>
          </outline>
          <outline text="usage-based billing" estimate="4h">
            <outline text="holds" estimate="4h"/>
          </outline>
          <outline text="event system" estimate="2d 1h">
            <outline text="heartbeat event" estimate="2h"/>
            <outline text="where do we store &quot;last did charging at X time?&quot;" estimate="1h"/>
            <outline text="register pre-commit callbacks" estimate="4h"/>
            <outline text="register post-completion callbacks" estimate="2h"/>
            <outline text="register within-transaction callbacks" estimate="1d"/>
          </outline>
          <outline text="replacement setup" estimate="1d 2h">
            <outline text="identical service" estimate="4h"/>
            <outline text="n-long chain (for brackets of rates)" estimate="4h"/>
            <outline text="someone who signs up for 6 years and gets the 5th free" estimate="2h"/>
          </outline>
          <outline text="expiration of service" estimate="2d 2h">
            <outline text="...when replacement exists" estimate="4h"/>
            <outline text="...when replacement doesn't exist" estimate="4h"/>
            <outline text="deactivate service on preprogrammed future date" estimate="6h"/>
            <outline text="manual deactivation by CS" estimate="4h"/>
          </outline>
          <outline text="contact management" estimate="1d 4h">
            <outline text="contacts (per se)" estimate="4h"/>
            <outline text="contact updates, editing, etc." estimate="1d"/>
          </outline>
          <outline text="send invoice" estimate="2h"/>
          <outline text="pay invoice" estimate="4h"/>
          <outline text="partial payment?" estimate="1d"/>
          <outline text="overpayment" estimate="4h"/>
          <outline text="upgrade/downgrade" estimate="2h">
            <outline text="Tricky Lizzie who cancels her extra aliases every 29th" estimate="2h"/>
            <outline text="with free trial period">
              <outline text="with subsequent autodowngrade after free trial"/>
              <outline text="partial free trial after partial free trial / refuse second free trial"/>
            </outline>
          </outline>
          <outline text="merging accounts (what does this mean?)" estimate="3d 2h">
            <outline text="create new account and attach to existing bank" estimate="4h"/>
            <outline text="merge two accounts with existing banks" estimate="6h"/>
            <outline text="splitting accounts" estimate="2d">
              <outline text="where there was only one account before" estimate="1d"/>
              <outline text="where there were multiple joined accounts that must be separated" estimate="1d"/>
            </outline>
          </outline>
          <outline text="per-seat accounts" estimate="4h"/>
          <outline text="per-calendar consumer switches to per-usage" estimate="4h"/>
          <outline text="consumption of general funds" estimate="4h"/>
          <outline text="refunds (and non-refundables)" estimate="2h">
            <outline text="including when there was a volume discount" estimate="2h"/>
          </outline>
          <outline text="discounts and coupons" estimate="4h"/>
          <outline text="fixed monthly cost plus usage charge" estimate="2h"/>
          <outline text="10% off monthly charges (non-profit discount)" estimate="2h"/>
        </outline>
        <outline text="specific" estimate="2d 2h">
          <outline text="standard pobox account" estimate="4h">
            <outline text="extra aliases, etc" estimate="2h"/>
            <outline text="AllMail" estimate="2h"/>
          </outline>
          <outline text="domain registration" estimate="4h"/>
          <outline text="listbox per-list billing" estimate="4h"/>
          <outline text="listbox bulk billing" estimate="2h"/>
          <outline text="metered pobox accounts (Convio)" estimate="4h"/>
        </outline>
      </outline>
      <outline text="customer service tools" estimate="1d 2h">
        <outline text="overview of ledger" estimate="1d 2h">
          <outline text="active consumers" estimate="2h"/>
          <outline text="general funds" estimate="1h"/>
          <outline text="invoice history" estimate="2h"/>
          <outline text="invoice drill-down" estimate="4h">
            <outline text="sensible cost tree browser" estimate="4h"/>
          </outline>
          <outline text="contact information" estimate="1h"/>
        </outline>
      </outline>
      <outline text="application integration API" estimate="3d">
        <outline text="portable invoice representation" estimate="4h"/>
        <outline text="get invoice details" estimate="2h"/>
        <outline text="get current balance" estimate="2h"/>
        <outline text="mechanism for communication of options (now I have extra aliases)" estimate="4h"/>
        <outline text="how many units of consumption remain?" estimate="4h">
          <outline text="sometimes, in days; sometimes in deliveries; etc" estimate="4h"/>
        </outline>
        <outline text="place hold for X units" estimate="2h"/>
        <outline text="place charge for X units" estimate="2h"/>
        <outline text="update contact information" estimate="4h"/>
      </outline>
      <outline text="credits and coupons" estimate="6h">
        <outline text="refundable or non-refundable credit" estimate="2h"/>
        <outline text="non-discountable charges" estimate="2h"/>
        <outline text="discount distribution across subtrees" estimate="2h"/>
      </outline>
      <outline text="application integration" estimate="4d 4h">
        <outline text="generic command-line browser" estimate="1d"/>
        <outline text="pobox" estimate="2d 1h">
          <outline text="signup" estimate="6h">
            <outline text="create ledger" estimate="2h"/>
            <outline text="create consumer (with trial period)" estimate="2h"/>
            <outline text="send first bill" estimate="2h"/>
          </outline>
          <outline text="add new account" estimate="4h"/>
          <outline text="cancel account" estimate="2h"/>
          <outline text="domain registration" estimate="5h">
            <outline text="queued event for registration" estimate="4h"/>
            <outline text="monitor for domain registration" estimate="1h"/>
          </outline>
        </outline>
        <outline text="listbox" estimate="1d 3h">
          <outline text="signup" estimate="3h">
            <outline text="create ledger" estimate="1h"/>
            <outline text="create consumer" estimate="1h"/>
            <outline text="send first bill" estimate="1h"/>
          </outline>
          <outline text="add new lists" estimate="2h"/>
          <outline text="deactivate lists" estimate="2h"/>
          <outline text="cash authorization for posting" estimate="4h">
            <outline text="success behavior" estimate="2h"/>
            <outline text="failure behavior" estimate="2h"/>
          </outline>
        </outline>
      </outline>
      <outline text="internal competence with KiokuDB (or something)" estimate="2d"/>
      <outline text="persistence to database" estimate="3d">
        <outline text="kioku objects" estimate="2d"/>
        <outline text="non-kioku objects (?)" estimate="1d"/>
      </outline>
      <outline text="asynchronicity event system" estimate="2d">
        <outline text="mechanism for building up URL and request from event attributes" estimate="1d"/>
        <outline text="means to clear or replace registered events" estimate="1d"/>
      </outline>
      <outline text="integration with external payment/etc. system"/>
      <outline text="migration to moonpig" estimate="2w 2d 5h">
        <outline text="modifications to old billing systems" estimate="1w 1d 4h">
          <outline text="which old applications will survive?"/>
          <outline text="reimplementation of old billing APIs" estimate="1w">
            <outline text="account expiration date method" estimate="1d"/>
            <outline text="contact management" estimate="2d"/>
            <outline text="invoice receptors" estimate="2d"/>
          </outline>
          <outline text="mark new customers as off-limits to old system" estimate="1d 4h">
            <outline text="process-chilltills" estimate="4h"/>
            <outline text="what else?" estimate="1d"/>
          </outline>
        </outline>
        <outline text="pobox" estimate="3d">
          <outline text="tool to migrate one client" estimate="2d"/>
          <outline text="upgrade alerts about billing problems" estimate="4h"/>
          <outline text="upgrade purgers to check correct paid-up status" estimate="4h"/>
        </outline>
        <outline text="listbox" estimate="3d 1h">
          <outline text="tool to migrate one freeside account" estimate="2d"/>
          <outline text="upgrade alerts about billing problems" estimate="4h"/>
          <outline text="upgrade purgers to check correct paid-up status" estimate="4h"/>
          <outline text="upgrade the tiered cost updater script" estimate="1h"/>
        </outline>
      </outline>
    </outline>
  </body>
</opml>
