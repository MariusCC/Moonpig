</%perl>
<form action='/post/make-payment' method='post'>
  Accept payment of: $
  <% $m->widget->input({ id => 'payment.amount' }) %><br />
  <% $m->widget->hidden({ id => 'payment.client_id', value => $client->id }) %>
  <% $m->widget->submit %>
</form>
</%method>

<%method account-list>
<%args>
$client
</%args>
<%perl>
my @accounts = $client->accounts;
if (@accounts) {
  print "<ul>\n";
  printf "  <li>%s</li>\n", join(' âžœ ', $_->alias, $_->fwd) for @accounts;
  print "</ul>\n";
} else {
  print "<p>You have no accounts</p>\n"
}
</%perl>
</%method>

<%method account-form>
