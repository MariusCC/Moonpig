%# vim:set ft=mason:
<%args>
$params
</%args>
<%perl>
my $acct_p  = $params->{account};
my $client  = $m->schema->resultset('Client')->find($acct_p->{client_id});
my $account = $client->related_resultset('accounts')->create({
  alias => $acct_p->{alias},
  fwd   => $acct_p->{fwd},
});
$m->redirect('/dashboard?username=' . $client->username);
</%perl>
