<%args>
$params
</%args>
<%perl>
my $user = $m->schema->resultset('User')->create({
  username => $params->{signup}{username},
});

my $ledger = $m->mp_request(
  POST => '/ledgers' => {
    name => $params->{signup}{name},
    email_addresses => $params->{signup}{email_addresses},
    consumers => {
      "unalay:username:$params->{signup}{username}" => {
        template => 'username'
      },
    },
  },
);

$m->redirect('/dashboard?guid=' . $ledger->{value}{guid});
</%perl>
