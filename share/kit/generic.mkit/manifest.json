{
  "kit_reader": "SWAK",
  "renderer"  : "Text::Template",
  "assembler" : [ 
    "Markdown",
    {
      "html_wrapper": "/dist/Moonpig/kit/wrapper/moonpig.html",
      "text_wrapper": "/dist/Moonpig/kit/wrapper/moonpig.txt"
    }
  ],
  "header": [
    { "Subject": "{$subject}" },
    { "To":      "{ join q{,}, @to_addresses }" },
    { "From":    "\"Moonpig Support\" <moonpig@example.com>" }
  ],
  "validator": [
    "Rx",
    {
      "schema": {
        "type": "//rec",
        "required": {
          "subject"     : "//str",
          "body"        : "//str",
          "to_addresses": { "type": "//arr", "contents": "//str" }
        }
      }
    }
  ],
  "path": "body.mkdn"
}
