<%args>
$search
</%args>
<%perl>
# vim:set ft=mason:
my $find_by = $search;

$m->redirect('/') unless $find_by;

my $by = $find_by =~ /\AL-/ ? 'by-ident'
       : $find_by =~ /:/    ? 'by-xid'
       :                      'by-guid';

my $ledger = $m->mp_request(GET => "/ledger/$by/$find_by");

$m->redirect('/') unless $ledger;

$m->redirect("/ledger/$ledger->{guid}");
</%perl>
